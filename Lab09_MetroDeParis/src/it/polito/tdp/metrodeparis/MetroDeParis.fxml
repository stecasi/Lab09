<BorderPane prefHeight="380.0" prefWidth="481.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.111" fx:controller="it.polito.tdp.metrodeparis.MetroDeParisController">
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox>
               <children>
                  <Label fx:id="lblPartenza" text="Seleziona una stazione di partenza:">
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
            <HBox>
               <children>
                  <ComboBox fx:id="cmbPartenza">
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </HBox.margin>
                  </ComboBox>
               </children>
            </HBox>
            <HBox>
               <children>
                  <Label fx:id="lblArrivo" text="Seleziona una stazione di arrivo:">
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
            <ComboBox fx:id="cmbArrivo">
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </ComboBox>
            <TextArea fx:id="txtResult" prefHeight="200.0" prefWidth="200.0">
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </TextArea>
            <HBox />
         </children>
      </VBox>
   </center>
   <top>
      <Label text="LAB9 - METROPARIS" BorderPane.alignment="CENTER" />
   </top>
   <bottom>
      <Button fx:id="btnCalcola" mnemonicParsing="false" onAction="#calcolaPercorso" text="Calcola Percorso" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="15.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </Button>
   </bottom>
</BorderPane>
